@{
	ViewBag.Title = "Index";
}
<!DOCTYPE html>

<html>
	<head>
		<meta name="viewport" content="width=device-width" />
		<title>Index</title>
		<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
		<link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
		<link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" />
	</head>
	<body>
		<h1>Лабораторная работа 1</h1>
		<h3><b>Список</b></h3>
		<ol type="A">
			<li>
				Элемент 1
			</li>
			<li>
				Элемент 2
			</li>
		</ol>

		<form method="post">
			<h3><b>Форма</b></h3>
			<p>
				<div class="form-check">
					<input class="form-check-info" type="checkbox" name="cb1" value="cb1" />
					<label class="form-check-label" for="cb1">Чек-бокс-1</label>
				</div>

				<div class="form-check">
					<input class="form-check-info" type="checkbox" name="cb2" value="cb2" />
					<label class="form-check-label" for="cb2">Чек-бокс-2</label>
				</div>

				<div class="row mb-3 offset-sm-3">
					<div class="col-2">
						<div class="form-check">
							<input class="form-check-info" type="radio" name="radio1" id="radio1" value="val1" />
							<label class="form-check-label" for="radio1">Радио-1</label>
						</div>
					</div>
					<div class="col-2">
						<div class="form-check">
						<input class="form-check-info" type="radio" name="radio1" id="radio2" value="val1" />
							<label class="form-check-label" for="radio2">Радио-2</label>
						</div>
					</div>
					<div class="col-2">
						<div class="form-check">
						<input class="form-check-info" type="radio" name="radio1" id="radio3" value="val1" />
							<label class="form-check-label" for="radio3">Радио-3</label>
						</div>
					</div>
				</div>

				<div class="row mb-3">
					<label for="inputLogin" class="col-sm-2 col-form-label">Логин</label>
					<div class="col-sm-10">
						<input class="form-control" name="inputLogin" id="inputLogin">
					</div>
				</div>

				<div class="row mb-3">
					<label for="inputPass" class="col-sm-2 col-form-label">Пароль</label>
					<div class="col-sm-10">
						<input type="password" class="form-control" name="inputPass" id="inputPass">
					</div>
				</div>
			</p>
			<p><input type="submit" name="submitButton" value="Отправить"</p>
		</form>
	</body>
</html>
